<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="Toolbar">
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorMenuToolbarText</item>
    </style>
    <style name="CharCodeTextStyle">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/colorCharCodeText</item>
    </style>
    <style name="ScaleTextStyle">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/colorScaleText</item>
        <item name="android:padding">5dp</item>
    </style>
    <style name="RateTodayTextStyle">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/colorRateText</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_marginRight">20dp</item>
    </style>
    <style name="RateTomorrowTextStyle">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/colorRateText</item>
        <item name="android:padding">5dp</item>
    </style>
    <style name="DateTodayTextStyle">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/colorRateText</item>
        <item name="android:padding">5dp</item>
    </style>
    <style name="DateTomorrowTextStyle">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/colorRateText</item>
        <item name="android:padding">5dp</item>
    </style>
    <style name="ErrorStyle">
        <item name="android:textSize">25sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorErrorText</item>
    </style>
</resources>
